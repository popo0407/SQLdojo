# Snowsight風SQL Webアプリ 環境変数設定例
# このファイルを .env にコピーして、実際の値を設定してください

# データベース設定
DATABASE__HOST=*******
DATABASE__USERNAME=*******
DATABASE__WAREHOUSE=*******
DATABASE__DATABASE=*******
DATABASE__SCHEMA=PUBLIC
DATABASE__ROLE=ACCOUNTADMIN
DATABASE__PRIVATE_KEY_PATH=*******
DATABASE__PRIVATE_KEY_PASSPHRASE=*******
DATABASE__TIMEOUT=30
DATABASE__MAX_CONNECTIONS=10

# アプリケーション設定
APP_HOST=0.0.0.0
APP_PORT=8001
APP_DEBUG=false
APP_SECRET_KEY=your-secret-key-here
APP_SESSION_TIMEOUT=3600
APP_MAX_FILE_SIZE=104857600
APP_UPLOAD_DIR=./uploads

# セキュリティ設定
SECURITY_ENABLE_SSL=false
SECURITY_CORS_ORIGINS=["*"]
SECURITY_RATE_LIMIT=100
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_SESSION_SECURE=false
SECURITY_ALLOWED_FILE_TYPES=[".csv", ".xlsx", ".json"]

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ENABLE_CONSOLE=true 